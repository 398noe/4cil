---
import { BASE_URL } from '../types/const';

interface Props {
	title: string;
	description: string;
	path: string;
	ogp?: string;
}

const { title, description, path } = Astro.props;
const url = BASE_URL + path;
const ogp = Astro.props.ogp ?? BASE_URL + '/ogp.png';
---

<!doctype html>
<html lang="ja" data-theme="light">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/vnd.microsoft.icon" href="/favicon.ico" />
		<!-- <link rel="icon" type="image/png" href="/favicon.png" /> -->
		<link rel="sitemap" href="/sitemap-index.xml" />
		<meta content={description} name="description" />
		<meta property="og:url" content={url} />
		<meta property="og:title" content={title} />
		<meta property="og:site_name" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:image" content={ogp} />
		<meta name="twitter:image:src" content={ogp} />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:text:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:site" content="@398noetan" />
		<meta name="twitter:creator" content="@398noetan" />
		<meta name="twitter:card" content="summary_large_image" />

		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	html {
		@apply text-white;
		scroll-behavior: smooth;
	}

	@media (prefers-reduced-motion: reduce) {
		:global(html) {
			scroll-behavior: auto;
		}
	}
</style>
